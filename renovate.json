{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchCategories": ["golang"],
      "enabled": true
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": ["*"],
      "automerge": true
    }
  ],
  "schedule": ["before 6am on monday"],
  "timezone": "Europe/Paris",
  "labels": ["dependencies"],
  "assignees": ["@me"],
  "reviewers": ["@me"]
}